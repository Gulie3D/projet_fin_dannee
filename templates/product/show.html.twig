{% extends 'base.html.twig' %}

{% block title %} {{ product.name }} {% endblock %}

{% block content %}

<div class="row">
    <div class="col-md-5">
        <img src="/uploads/{{ product.illustartion }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <div class="col-md-7">
        <h3>{{ product.name }}</h3>
        <p>{{ product.subtitle }}</p>
        <span class="product-page-price" style="font-size: 20px; font-weight: bold;">{{ (product.prix / 100) | number_format(2) }} €</span>
        <hr>
        <p>{{ product.description }}</p>
        <hr>
        <a href="{{ path('add_to_cart', {'id' : product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
    </div>    
</div>
<hr>
<br>
<h3>Nos meilleurs ventes</h3>
<p>Découvrez les articles les plus vendus.</p>
<div class="row">
    {% for product in products %}
    <div class="col-md-3">
        {% include "product/single_product.html.twig" %}
    </div>
    {% endfor %}
</div><!-- /.row -->
<br><br><br>

{% endblock %}
